<Window x:Class="Seating_Planner.Views.LoadEvent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Seating_Planner.ViewModels="clr-namespace:Seating_Planner.ViewModels"
        Title="Seating Planner - Load an Event" Height="400" Width="300" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Window.DataContext>
        <Seating_Planner.ViewModels:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <ListBox Name="Events" ItemsSource="{Binding Events}" Margin="10,10,0,174" DisplayMemberPath="event_name" HorizontalAlignment="Left" Width="265" SelectedItem="{Binding Event}">
            <ListBox.Resources>
                <DataTemplate DataType="{x:Type Seating_Planner.ViewModels:MainWindowViewModel}">
                    <Border BorderBrush="Black" BorderThickness="1" CornerRadius="5"></Border>
                </DataTemplate>
            </ListBox.Resources>
        </ListBox>
        <Label Name="date_time_updated" Margin="100,203,19,132" Content="{Binding event_details}"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="203,330,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Content="Load" HorizontalAlignment="Left" Margin="113,330,0,0" VerticalAlignment="Top" Width="75" Command="{Binding OpenSingleEventCommand}" CommandParameter="{Binding SelectedItem, ElementName=Events}"/>
    </Grid>
</Window>
