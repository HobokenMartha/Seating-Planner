<Window x:Class="Seating_Planner.Views.LoadEvent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Seating_Planner.ViewModels="clr-namespace:Seating_Planner.ViewModels"
        Title="Seating Planner - Load an Event" Height="300" Width="300" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Window.DataContext>
        <Seating_Planner.ViewModels:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <ListBox Name="Events" ItemsSource="{Binding Events}" Margin="0,0,0,131" DisplayMemberPath="event_details" HorizontalAlignment="Left" Width="294"/>
        <Button Content="Load Events" HorizontalAlignment="Left" Margin="10,146,0,0" VerticalAlignment="Top" Width="75" Command="{Binding LoadEventsCommand}"/>
    </Grid>
</Window>
