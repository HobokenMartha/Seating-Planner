<Window x:Class="Seating_Planner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Seating_Planner.ViewModels="clr-namespace:Seating_Planner.ViewModels"
        Title="Seating Planner" Height="600" Width="800" WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <Seating_Planner.ViewModels:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Rectangle Name="rect" Width="150" VerticalAlignment="Stretch" Fill="#99000000" Visibility="Collapsed"/>
        <Button Name="FlyoutButton" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Width="32" Height="32" FontSize="16" VerticalAlignment="Top" HorizontalAlignment="Right" Background="White" RenderTransformOrigin="0.388,-2.642" Command="{Binding FlyoutCommand}">&gt;</Button>
        <Button Content="Button" Grid.Column="1" HorizontalAlignment="Left" Margin="351,216,0,0" VerticalAlignment="Top" Width="75" Command="{Binding LoadEvents}" />
    </Grid>
</Window>
